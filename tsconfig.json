{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vitest/globals",
      "vite-plugin-pwa/client"
    ]
  },
  "include": [
    "src",
    "tests",
    "tests/setup.ts",
    ".eslintrc.json",
    "vite.config.ts",
    "types",
    "codegen.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
